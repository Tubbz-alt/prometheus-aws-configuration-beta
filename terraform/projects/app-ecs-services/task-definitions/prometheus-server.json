[
  {
    "name": "prometheus",
    "image": "prom/prometheus",
    "cpu": 2048,
    "memory": 8192,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 9090,
        "hostPort": 9090
      }
    ],
    "mountPoints": [
      {
        "sourceVolume": "prometheus-config",
        "containerPath": "/etc/prometheus/prometheus.yml"
      },
      {
        "sourceVolume": "alert-config",
        "containerPath": "/etc/prometheus/alerts"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "prometheus"
      }
    }
  },
  {
    "name": "s3-config-grabber",
    "image": "mesosphere/aws-cli",
    "cpu": 40,
    "memory": 256,
    "essential": false,
    "mountPoints": [
      {
        "sourceVolume": "pulled-config",
        "containerPath": "/configs"
      }
    ],
    "command": ["s3", "sync", "s3://gdsprom-phil-config/etc/prometheus", "/configs/prometheus"],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "prometheus"
      }
    }
  }
]
