[
  {
    "name": "prometheus",
    "image": "prom/prometheus",
    "memoryReservation": 4096,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 9090,
        "hostPort": 9090
      }
    ],
    "mountPoints": [
      {
        "sourceVolume": "prometheus-config",
        "containerPath": "/etc/prometheus"
      },
      {
        "__comment": "/prometheus is the default path that prometheus uses to store timeseries",
        "sourceVolume": "prometheus-timeseries-storage",
        "containerPath": "/prometheus"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "prometheus"
      }
    }
  },
  {
    "name": "s3-config-grabber",
    "image": "mesosphere/aws-cli",
    "memory": 256,
    "essential": false,
    "mountPoints": [
      {
        "sourceVolume": "config-from-s3",
        "containerPath": "/configs"
      }
    ],
    "command": ["s3", "sync", "s3://${config_bucket}/etc/prometheus", "/configs/prometheus"],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "prometheus"
      }
    }
  }
]
